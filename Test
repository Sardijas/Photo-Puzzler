def kSuperSplit(L, k, n):
    
    if (len(L) == 0):
        return None
    elif(sum(L) <= n):
        return L
    else:
        for i in range(len(L)):
            for j in range(len(L)):
                if (i != j):
                    if (i < j):
                        l = i
                        g = j
                    else:
                        l = j
                        g = i
                        
                    list1 = kSuperSplit(L[:l], k, n)
                    list2 = kSuperSplit(L[l:g], k, n)
                    list3 = kSuperSplit(L[g:], k, n)
                    print(list1)
                    print(list2)
                    print(list3)
                    
                    finalList = []
                        
                    if (list1 != None and isinstance(list1[0], type([]))):
                        for list in list1:
                            finalList.append(list)
                            
                    if (list2 != None and isinstance(list2[0], type([]))):
                        for list in list2:
                            finalList.append(list)
                            
                    if (list3 != None and isinstance(list3[0], type([]))):
                        for list in list3:
                            finalList.append(list)
                    
                    if len(finalList) == k:
                        return finalList
        
        return None
                    
                    
print(kSuperSplit([1, 5, 1, 1, 2, 3, 4, 5], 3, 8))